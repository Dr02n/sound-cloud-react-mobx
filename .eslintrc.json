{
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "plugins": [
        "simple-import-sort"
    ],
    "rules": {
        "react/prop-types": 0,
        "no-var": "error",
        "prefer-const": ["error", {
            "destructuring": "all"
        }],
        "simple-import-sort/sort": "error"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
